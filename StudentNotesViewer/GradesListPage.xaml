    </Page.Resources>
    
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Go Back" Margin="0,5,0,20" Click="GoBack">
                    <Button.RenderTransform>
                        <ScaleTransform/>
                    </Button.RenderTransform>
                </Button>
                <Button Grid.Column="1" Content="New Grade" Margin="0,5,0,20" Click="NewGrade">
                    <Button.RenderTransform>
                        <ScaleTransform />
                    </Button.RenderTransform>
                </Button>
                <Label Grid.Column="2" Name="InfoLabel" Style="{StaticResource WhiteLabel}"/>
            </Grid>
            <ListBox Name="GradesListBox" Margin="5,0,5,5"/>
        </StackPanel>
    </Grid>
</Page>
